/**index.wxss**/
.selection{
  border-bottom: 6px solid #ddd;

}



.header{
   border-left-width:2px;
   border-left-style: solid;
   border-left-color: green;
   display:flex;
   justify-content: space-between;
   align-items: center;
   height: 60rpx;
   padding-left: 10rpx;
   padding-right: 10rpx;
   margin-top: 20rpx;
   margin-bottom:10rpx;
}
.text-all{
  color:rgb(163, 209, 93);
  font-size: 14px;
}
.content{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}


.content-item{
  height: 250rpx;
  width: 45%;
  background-color: goldenrod;
  margin: 5px;
  position: relative;
}
.content-item image{
  width:100%;
  height:100%;
}

.content-item-text{
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0));
  height: 50rpx;
  width:98%;
  display: fex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 1%;
}


.list-item{
  height:650rpx;
  width:100%;
  position: relative;
}
.list-item-images{
  height: 400rpx;
  width:100%;
}
.list-item-images-imag{
  height: 100%;
  width:100%;
}
.avatar{
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 200rpx;
  right: 50rpx;
}

.list-item-text{
  height:250rpx;
  width:96%;
  
  padding-left: 2%;
  padding-right: 2%;
  background-color: rgb(221, 204, 238)
  
}


.list-item-text-content{
  font-size: 10px;
  color:#999;
  margin-top: 20rpx;
}